<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/txt_status"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_status"
        android:clickable="false"
        android:drawablePadding="8dp"
        android:ems="10"
        android:text="PENDING"
        android:textColor="#FFFFFF"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Form"
        app:layout_constraintVertical_bias="0.866" />

    <EditText
        android:id="@+id/txt_bidang"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_login_text"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="Bidang Kerja"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_mulai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.869" />

    <EditText
        android:id="@+id/txt_nama"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_login_text"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="Nama"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_mulai"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.38" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FORM CUTI DARURAT"
        android:textColor="#070707"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.068" />

    <EditText
        android:id="@+id/txt_ket"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginTop="272dp"
        android:background="@drawable/custom_login_text"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="Keterangan"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_Form"
        app:layout_constraintEnd_toEndOf="@+id/txt_selesai"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_selesai"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.68" />

    <EditText
        android:id="@+id/txt_mulai"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:layout_marginTop="200dp"
        android:background="@drawable/custom_login_text"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="tanggal mulai"
        android:inputType="date"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_ket"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView4"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/txt_selesai"
        style="@style/Widget.Material3.AutoCompleteTextView.OutlinedBox"
        android:layout_width="226dp"
        android:layout_height="47dp"
        android:background="@drawable/custom_login_text"
        android:drawablePadding="8dp"
        android:ems="10"
        android:fontFamily="@font/amaranth"
        android:hint="Tanggal Selesai"
        android:inputType="date"
        android:textSize="12sp"
        app:layout_constraintBottom_toTopOf="@+id/txt_ket"
        app:layout_constraintEnd_toEndOf="@+id/txt_mulai"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/txt_mulai"
        app:layout_constraintTop_toBottomOf="@+id/txt_mulai"
        app:layout_constraintVertical_bias="0.552" />

    <Button
        android:id="@+id/btn_Form"
        android:layout_width="161dp"
        android:layout_height="70dp"
        android:text="KIRIM"
        app:backgroundTint="#00BCD4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.747" />

</androidx.constraintlayout.widget.ConstraintLayout>